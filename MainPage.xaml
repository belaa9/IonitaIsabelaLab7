<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IonitaIsabelaLab7.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="bela_image.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Student specific image description" />

            <Label
                Text="Hello, Bela!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Welcome to your customized .NET MAUI app. This app is designed just for you, Bela!"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Student specific welcome text" />

            <Button
                x:Name="CounterBtn"
                Text="Click me, Bela!" 
                SemanticProperties.Hint="Counts the number of times you, Bela, click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
